
{
  "abstract_uart": {
    "required_registers": [
      "CTRL",
      "FRAME",
      "BAUD",
      "STATUS",
      "DATA"
    ],

    "bitfields": {
      "CTRL": {
        "uart_enable": {
          "position": "{{CTRL_UART_ENABLE_POS}}",
          "width": "{{CTRL_UART_ENABLE_WIDTH}}"
        },
        "tx_enable": {
          "position": "{{CTRL_TX_ENABLE_POS}}",
          "width": "{{CTRL_TX_ENABLE_WIDTH}}"
        },
        "rx_enable": {
          "position": "{{CTRL_RX_ENABLE_POS}}",
          "width": "{{CTRL_RX_ENABLE_WIDTH}}"
        },
        "tx_interrupt_enable": {
          "position": "{{CTRL_TX_INT_POS}}",
          "width": 1
        },
        "rx_interrupt_enable": {
          "position": "{{CTRL_RX_INT_POS}}",
          "width": 1
        }
      },

      "FRAME": {
        "word_length": {
          "position": "{{FRAME_WORD_LENGTH_POS}}",
          "width": "{{FRAME_WORD_LENGTH_WIDTH}}"
        },
        "parity_enable": {
          "position": "{{FRAME_PARITY_ENABLE_POS}}",
          "width": 1
        },
        "parity_type": {
          "position": "{{FRAME_PARITY_TYPE_POS}}",
          "width": 1
        },
        "stop_bits": {
          "position": "{{FRAME_STOP_BITS_POS}}",
          "width": "{{FRAME_STOP_BITS_WIDTH}}"
        }
      },

      "BAUD": {
        "baud_divider": {
          "position": "{{BAUD_DIV_POS}}",
          "width": "{{BAUD_DIV_WIDTH}}"
        }
      },

      "STATUS": {
        "tx_empty": {
          "position": "{{STATUS_TX_EMPTY_POS}}",
          "width": 1
        },
        "rx_not_empty": {
          "position": "{{STATUS_RXNE_POS}}",
          "width": 1
        },
        "overrun_error": {
          "position": "{{STATUS_ORE_POS}}",
          "width": 1
        }
      },

      "DATA": {
        "data": {
          "position": "{{DATA_POS}}",
          "width": "{{DATA_WIDTH}}"
        }
      }
    }
  }
}
